{
    "name": "spatie/phpunit-watcher",
    "description": "Automatically rerun PHPUnit tests when source code changes",
    "keywords": [
        "spatie",
        "phpunit-watcher"
    ],
    "homepage": "https://github.com/spatie/phpunit-watcher",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "clue/stdio-react": "^2.4",
        "jolicode/jolinotif": "^2.2",
        "symfony/console": "^6 | ^7",
        "symfony/finder": "^6 | ^7",
        "symfony/process": "^6 | ^7",
        "symfony/yaml": "^6 | ^7"
    },
    "conflict": {
        "symfony/console": "<5.2"
    },
    "require-dev": {
        "symfony/filesystem": "^6 | ^7",
        "phpunit/phpunit": "^10.0 | ^11.0"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\PhpUnitWatcher\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\PhpUnitWatcher\\Test\\": "tests"
        },
        "files": [
            "tests/helpers.php"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "bin": [
        "phpunit-watcher"
    ]
}
