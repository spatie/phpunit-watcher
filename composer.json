{
    "name": "spatie/phpunit-watcher",
    "description": "Automatically rerun PHPUnit tests when source code changes",
    "keywords": [
        "spatie",
        "phpunit-watcher"
    ],
    "homepage": "https://github.com/spatie/phpunit-watcher",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0",
        "clue/stdio-react": "^1.0",
        "symfony/console": "^3.0",
        "symfony/process": "^3.0",
        "symfony/yaml": "^3.0",
        "yosymfony/resource-watcher": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\PhpUnitWatcher\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\PhpUnitWatcher\\Test\\": "tests"
        },
        "files": [
            "tests/helpers.php"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "bin": [
        "phpunit-watcher"
    ]
}
